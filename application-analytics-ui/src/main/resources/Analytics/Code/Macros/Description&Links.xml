    <property>
      <code>define('analyticsDescriptionsAndLinks', {
  prefix: 'analytics.descriptionsAndLinks.',
  keys: [
    'browserEnginesMacro',
    'browsersMacro',
    'configurationsMacro',
    'deviceBrandMacro',
    'deviceModelMacro',
    'deviceTypeMacro',
    'mostViewedMacro',
    'operatingSystemVersionsMacro',
    'pagesFollowingASiteSearch',
    'screenResolutionMacro',
    'searchCategories',
    'siteSearchKeywords'
  ]
});
require(['jquery', 'xwiki-l10n!analyticsDescriptionsAndLinks'], ($,l10n) =&gt; {
      const referenceMappings ={
        'browserEnginesMacro': 'Analytics.Code.Macros.BrowserEngines',
        'browsersMacro': 'Analytics.Code.Macros.Browsers',
        'configurationsMacro': 'Analytics.Code.Macros.Configurations',
        'deviceBrandMacro':'Analytics.Code.Macros.DeviceBrand',
        'deviceModelMacro': 'Analytics.Code.Macros.DeviceModel',
        'deviceTypeMacro': 'Analytics.Code.Macros.DeviceType',
        'mostViewedMacro': 'Analytics.Code.Macros.MostViewedPages',
        'operatingSystemVersionsMacro': 'Analytics.Code.Macros.OperatingSystemVersions',
        'pagesFollowingASiteSearch': 'Analytics.Code.Macros.PagesFollowingASiteSearch',
        'screenResolutionMacro': 'Analytics.Code.Macros.ScreenResolution',
        'searchCategories': 'Analytics.Code.Macros.SearchCategories',
        'siteSearchKeywords': 'Analytics.Code.Macros.SiteSearchKeywords'
    };
    let templatePage = XWiki.Model.resolve('Analytics.Code.Macros.Description&amp;LinksTemplate', XWiki.EntityType.DOCUMENT);
    let url = new XWiki.Document(templatePage).getURL('get');

    $.post(new XWiki.Document(templatePage).getURL('get'), function(data) {
        $('.xdialog-content .xwikicontent p a').html(data);
    })
    .done((data) =&gt; {
        $(document).ready(function() {
            $('[id^="gadget_"]').each(function() {
                let id = $(this).find('.gadget-content div').first().attr('id');
                if(id !=null) {
                   let macroName =  id.substring(0, id.indexOf('_'));
                   //  if the macro name is not present in the reference  mapping then we can skip the gadget.
                   if(referenceMappings[macroName]){
                     let reference = XWiki.Model.resolve(referenceMappings[macroName], XWiki.EntityType.DOCUMENT);
                     let url = new XWiki.Document(reference).getURL('view');
                     // Convert the data string into a html element using jquery to add title &amp; href properties
                     dataElement = $(data);
                     dataElement.attr('title', l10n[macroName]); // The title property should contain the description of the macro.
                     dataElement.attr('href', url); // Should pe a link to the macro page, this link should be solved by using a resolver and the page reference.
                     $(this).find('.gadget-title').append(dataElement);
                  }
                }
            });
        });
    })
    .fail(() =&gt; {
        // Handle failure
    });
});
